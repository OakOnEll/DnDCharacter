<spell>
    <name>Chromatic Orb</name>
    <school>Evocation</school>
    <level>1</level>
    <classes>
        <class>Wizard</class>
        <class>Sorcerer</class>
    </classes>
    <duration>Instantaneous</duration>
    <range>90 feet</range>
    <castingTime>1 action</castingTime>
    <components>V,S,M (a diamond worth at least 50gp)</components>

    <numTargets>1</numTargets>
    <attack>ranged</attack>
    <damage>3d8 + d8*spellLevel</damage>
    <damageType>acid,cold,fire,lightning,poison,thunder</damageType>

    <shortDescription>You hurl a 4inch sphere at a target, choosing a damage type. If the ranged spell attack hits, target takes damage.</shortDescription>
</spell>