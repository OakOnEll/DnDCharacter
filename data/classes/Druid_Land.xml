                    <spell>Spider Climb</spell>
                </spells>
            </or>
            <or name="grassland" title="Grassland">
                <spells>
                    <spell>Invisibility</spell>
                    <spell>Pass Without Trace</spell>
                </spells>
            </or>
            <or name="mountain" title="Mountain">
                <spells>
                    <spell>Spider Climb</spell>
                    <spell>Spike Growth</spell>
                </spells>
            </or>
            <or name="swamp" title="Swamp">
                <spells>
                    <spell>Darkness</spell>
                    <spell>Melf's Acid Arrow</spell>
                </spells>
            </or>
            <or name="underdark" title="Underdark">
                <spells>
