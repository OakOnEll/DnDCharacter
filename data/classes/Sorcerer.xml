<class>
    <name>Sorcerer</name>
    <hitDice>1d6</hitDice>
    <armor>
        <proficiency category="light armor"></proficiency>
    </armor>
    <weapons>
        <proficiency>Dagger</proficiency>
        <proficiency>Dart</proficiency>
        <proficiency>Sling</proficiency>
        <proficiency>Quarterstaff</proficiency>
        <proficiency>Light Crossbow</proficiency>
    </weapons>
    <savingThrows>
        <proficiency>Constitution</proficiency>
        <proficiency>Charisma</proficiency>
    </savingThrows>
    <skills>
        <choose name="skills" number="2">
            <or name="arcana">
                <proficiency>Arcana</proficiency>
            </or>
            <or name="deception">
                <proficiency>Deception</proficiency>
            </or>
            <or name="insight">
                <proficiency>Insight</proficiency>
            </or>
            <or name="intimidation">
                <proficiency>Intimidation</proficiency>
            </or>
            <or name="persuasion">
                <proficiency>Persuasion</proficiency>
            </or>
            <or name="religion">
                <proficiency>Religion</proficiency>
            </or>
        </choose>
    </skills>
    <equipment>
        <item count="2">Dagger</item>
        <choose name="weapon">
            <or name="crossbow">
                <item>light crossbow</item>
                <item count="20">crossbow bolt</item>
            </or>
            <or name="simple">
                <choose name="weapon_weapon" category="simple weapons" />
            </or>
        </choose>
        <choose name="magic">
            <or name="pouch">
                <item>Component Pouch</item>
            </or>
            <or name="focus">
                <item>Arcane Focus</item>
            </or>
        </choose>
        <choose name="pack">
            <or name="dungeoneers">
                <item>dungeoneer's pack</item>
            </or>
            <or name="explorers">
                <item>explorer's pack</item>
            </or>
        </choose>
    </equipment>
    <spellCastingStat>charisma</spellCastingStat>
    <level value="1">
        <subclass label="Sorcerous Origin" />
        <cantrips>
            <known>4</known>
        </cantrips>
        <spells>
            <known>2</known>
            <slots>
                <level value="1">2</level>
            </slots>
        </spells>
    </level>
    <level value="2">
        <cantrips>
            <known>4</known>
        </cantrips>
        <spells>
            <known>3</known>
            <slots>
                <level value="1">3</level>
            </slots>
        </spells>
        <feature>
            <name>Font of Magic</name>
            <refreshes>rest</refreshes>
            <pool>2</pool>
            <shortDescription>You have sorcery points representing a deep wellspring of magic within yourself.</shortDescription>
            <context></context>
        </feature>
    </level>
    <level value="3">
        <cantrips>
            <known>4</known>
        </cantrips>
        <spells>
            <known>4</known>
            <slots>
                <level value="1">4</level>
                <level value="2">2</level>
            </slots>
        </spells>
        <feature>
            <name>Metamagic</name>
            <refreshes>rest</refreshes>
            <pool>2</pool>
            <shortDescription>You can choose a metamagic option to apply to spells cast.</shortDescription>
            <context></context>
        </feature>
    </level>
</class>