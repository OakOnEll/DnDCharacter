<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oakonell.dndcharacter">

    <application xmlns:tools="http://schemas.android.com/tools"
        android:name=".DndCharacterApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <activity
            android:name=".CharactersListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.background.BackgroundsListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.race.RacesListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.classes.ClassesListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.item.ItemsListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.imports.ImportActivity"
            android:label="@string/app_name" />

        <meta-data
            android:name="AA_MODELS"
            android:value="com.oakonell.dndcharacter.model.background.Background, com.oakonell.dndcharacter.model.classes.AClass, com.oakonell.dndcharacter.model.item.ItemRow, com.oakonell.dndcharacter.model.race.Race, com.oakonell.dndcharacter.model.CharacterRow, com.oakonell.dndcharacter.model.effect.Effect" />
        <meta-data
            android:name="AA_DB_NAME"
            android:value="character.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="6" />

        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="com.oakonell.dndcharacter"
            android:exported="false" />

    </application>

</manifest>
