<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <!--
                    TextView dieSides;
                    TextView currentDiceRemaining;
                    TextView numDiceToRestore;
                    TextView totalDice;
    -->
    <TextView
        android:id="@+id/total"
        android:layout_width="50dp"
        android:layout_height="wrap_content"

        android:text="@string/total_label" />


    <TextView
        android:id="@+id/die"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/die_label" />

    <!-- doubles as a header, with the label, and the value in a row -->
    <TextView
        android:id="@+id/current_dice_remaining"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/current_dice_remaining_label" />

    <TextView
        android:id="@+id/plus_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+" />

    <com.oakonell.dndcharacter.views.MyEditText
        android:id="@+id/dice_to_restore"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        tools:text="3" />

    <TextView
        android:id="@+id/restore_lbl"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/restore_label"

        android:visibility="gone" />

    <TextView
        android:id="@+id/equals_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="=" />

    <TextView
        android:id="@+id/resultant_dice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/result_dice_restore_label" />

</LinearLayout>