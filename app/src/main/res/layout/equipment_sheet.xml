<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <!--
        android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_character_section" />

        <include layout="@layout/equipment_proficiency_and_money_layout" />



        <LinearLayout
            android:id="@+id/weapons_items_group"
            style="@style/items_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="Weapons"
                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                <Button
                    android:id="@+id/addWeapon"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Add" />


            </LinearLayout>

            <include layout="@layout/weapon_row" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#e985a4e7" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/weapons_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/armor_items_group"
            style="@style/items_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="Armor"
                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                <Button
                    android:id="@+id/addArmor"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Add" />


            </LinearLayout>

            <include layout="@layout/armor_row" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#e985a4e7" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/armor_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            style="@style/items_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="Equipment"
                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                <Button
                    android:id="@+id/addItem"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Add" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#e985a4e7" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/items_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
    <!-- having multiple lists on this page requires a merge adapter --><!--    <android.support.v7.widget.RecyclerView
            android:id="@+id/merge_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    -->

</ScrollView>