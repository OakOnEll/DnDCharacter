<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_character_section" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/xp_group"
                style="@style/ac_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/experience_label" />

                <TextView
                    android:id="@+id/xp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="300" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/looks_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/age_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/age_label" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/height_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/height_label" />

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6'2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight_label" />

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="204" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eyes_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eye_color_label" />

                    <TextView
                        android:id="@+id/eyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/skin_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skin_label" />

                    <TextView
                        android:id="@+id/skin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Grey-green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hair_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hair_label" />

                    <TextView
                        android:id="@+id/hair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/language_group"
                style="@style/ac_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/languages_label" />

                <TextView
                    android:id="@+id/languages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Common, Elvish" />
            </LinearLayout>

            <LinearLayout
                style="@style/ac_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alignment_label" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/specialty_group"
            style="@style/ac_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/specialty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specialty_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/specialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3" />
        </LinearLayout>

        <LinearLayout
            style="@style/ac_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personality_traits_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.oakonell.dndcharacter.views.MyEditText
                android:id="@+id/personality_traits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3" />
        </LinearLayout>

        <LinearLayout
            style="@style/ac_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ideals_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.oakonell.dndcharacter.views.MyEditText
                android:id="@+id/ideals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3" />
        </LinearLayout>

        <LinearLayout
            style="@style/ac_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bonds_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.oakonell.dndcharacter.views.MyEditText
                android:id="@+id/bonds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3" />
        </LinearLayout>

        <LinearLayout
            style="@style/ac_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flaws_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.oakonell.dndcharacter.views.MyEditText
                android:id="@+id/flaws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3" />
        </LinearLayout>

        <LinearLayout
            style="@style/ac_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backstory_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.oakonell.dndcharacter.views.MyEditText
                android:id="@+id/backstory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>